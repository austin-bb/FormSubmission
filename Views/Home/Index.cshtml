<h1>Enter your information!</h1>
@model User

<form action="user/create" method="post" style="width:50%;">
  <div class="form-group">
    <label asp-for="FirstName">First Name: </label>
    <span asp-validation-for="FirstName" style="color: red;"></span>
    <input type="text" asp-for="FirstName" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="LastName">Last Name: </label>
    <span asp-validation-for="LastName" style="color: red;"></span>
    <input type="text" asp-for="LastName" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="Age">Age: </label>
    <span asp-validation-for="Age" style="color: red;"></span>
    <input type="text" asp-for="Age" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="Email">Email Address: </label>
    <span asp-validation-for="Email" style="color: red;"></span>
    <input type="text" asp-for="Email" class="form-control">
  </div>
  <div class="form-group">
    <label asp-for="Password">Password: </label>
    <span asp-validation-for="Password" style="color: red;"></span>
    <input type="text" asp-for="Password" class="form-control">
  </div>
  <button type="submit">Submit</button>
</form>